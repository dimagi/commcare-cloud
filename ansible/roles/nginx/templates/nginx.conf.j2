# {{ ansible_managed }}
user {{ nginx_user }};
worker_processes  {{ ansible_processor_count }};
pid        /var/run/nginx.pid;

{% if nginx_worker_rlimit_nofile is defined%}
worker_rlimit_nofile {{ nginx_worker_rlimit_nofile }};
{% endif %}

events {
    worker_connections  {{ nginx_max_clients }};
}


http {

        include /etc/nginx/mime.types;
        default_type application/octet-stream;

        access_log /var/log/{{ nginx_access_log_name }};
        error_log /var/log/{{ nginx_error_log_name }} warn;

        log_format timing '[$time_local] $upstream_cache_status $request $status $request_time';
        log_format rt_cache '$remote_addr - $remote_user - $upstream_cache_status - [$time_local] '
                    '"$request" $status $body_bytes_sent '
                    '"$http_referer" "$http_user_agent"';

{% for k,v in nginx_http_params.iteritems() %}
        {{ k }}  {{ v }};
{% endfor %}

        gzip on;
        gzip_disable "msie6";
        gzip_types
            text/css
            text/javascript
            text/xml
            text/plain
            text/x-component
            application/javascript
            application/json
            application/xml
            application/rss+xml
            font/truetype
            font/opentype
            application/vnd.ms-fontobject
            image/svg+xml;

        include /etc/nginx/conf.d/*.conf;
        include /etc/nginx/sites-enabled/*;
}
