# {{ ansible_managed }}

[backup]
db1-path={{ postgresql_home }}
{% if pg_backup_to %}
db2-host={{ pg_backup_to }}
db2-path={{ postgresql_home }}
{% endif %}

{% if postgres_s3 %}
[backups3]
db1-path={{ postgresql_home }}
{% if pg_backup_to %}
db2-host={{ pg_backup_to }}
db2-path={{ postgresql_home }}
{% endif %}
repo-path=/pgbackrest
repo-type=s3
{% if postgres_backup_bucket %}
repo-s3-bucket={{ postgres_backup_bucket }}
{% else %}
repo-s3-bucket=dimagi-{{ deploy_env }}-postgres-backups
{% endif %}
repo-s3-endpoint={{ aws_endpoint | default("s3.amazonaws.com")}}
repo-s3-key={{ localsettings.AMAZON_S3_ACCESS_KEY }}
repo-s3-key-secret={{ localsettings.AMAZON_S3_SECRET_KEY }}
{% if aws_region %}
repo-s3-region={{ aws_region }}
{% endif %}

{% endif %}

[global]
{% if hot_standby_server %}
backup-standby=y
backup-host={{ hot_standby_server }}
backup-user=postgres
{% endif %}
repo-path={{ postgresql_backup_dir }}
retention-diff={{ postgresql_backup_days }}
retention-full={{ postgresql_backup_weeks }}
retention-archive=1
retention-archive-type=incr
start-fast=y
stop-auto=y
compress-level=9
