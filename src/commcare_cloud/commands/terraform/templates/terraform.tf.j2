terraform {
  backend "s3" {
    bucket  = {{ state_bucket|tojson }}
    key     = "state/{{ environment }}.tfstate"
    region  = {{ state_bucket_region|tojson }}
    encrypt = true
  }
  required_version = "~> 0.11.0, < 0.11.15"
}

provider "aws" {
  version = "~> 1.44"
  region  = {{ region|tojson }}
}

variable "rds_password" {
  type = "string"
}
