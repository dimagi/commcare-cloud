#jinja2: trim_blocks: True, lstrip_blocks: True
[program:{{ project }}-{{ deploy_env }}-celery_flower]
command={{ virtualenv_home }}/bin/celery
    -A corehq flower
    --address=0.0.0.0
    --port={{ app_processes_config.flower_port }}
    {% if (amqp == "true") and ('awsmq'  in groups and groups.awsmq)%}
       --broker_api=amqps://{{ AMQP_USER }}:{{ AMQP_PASSWORD }}@{{ AMQP_HOST }}
    {% elif (amqp == "false") and ('rabbitmq'  in groups and groups.rabbitmq)%}
       --broker_api=http://{{ AMQP_USER }}:{{ AMQP_PASSWORD }}@{{ AMQP_HOST }}:15672/api/ 
    {% endif %}
directory={{ code_home }}
user={{ cchq_user }}
numprocs=1
autostart=true
autorestart=true
stdout_logfile={{ log_home }}/celery_flower.log
redirect_stderr=true
stderr_logfile={{ log_home }}/celery_flower.error.log
startsecs=10
; Need to wait for currently executing tasks to finish at shutdown.
; Increase this if you have very long running tasks.
stopwaitsecs = 10
; if rabbitmq is supervised, set its priority higher
; so it starts first
