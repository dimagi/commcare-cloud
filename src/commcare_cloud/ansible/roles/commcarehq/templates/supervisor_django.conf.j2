[program:{{ project }}-{{ deploy_env }}-django]
directory={{ code_home }}/
; gunicorn
environment={% for name, value in item.env_vars.items() %}{% if value %}{{ name }}="{{ value }}",{% endif %}{% endfor %}

command={{ app_processes_config.newrelic_django_prefix }}{{ virtualenv_home }}/bin/gunicorn deployment.gunicorn.commcarehq_wsgi:application -c deployment/gunicorn/gunicorn_conf.py -k gevent --workers {{ item.gunicorn_workers }} --bind 0.0.0.0:{{ django_port }} --log-file {{ log_home }}/{{ project }}.gunicorn.log --log-level debug --statsd-host localhost:8125
user={{ cchq_user }}
autostart=true
autorestart=true
stdout_logfile={{ log_home }}/django.log
redirect_stderr=true
stderr_logfile={{ log_home }}/django.error.log
;stopsignal=QUIT
;stopwaitsecs=60
;killasgroup=true
;stopasgroup=false
