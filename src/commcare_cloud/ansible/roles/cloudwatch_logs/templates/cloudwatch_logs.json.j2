{
    "logs":
    {
        "logs_collected": {
            "files": {
                "collect_list": [
                {% for cfg in log_files_collect_list -%}
                {
                    "file_path": "{{ cfg.file_path }}",
                    "log_group_name": "{{ cfg.log_group_name }}",
                    "log_stream_name": "{instance_id}-{local_hostname}-{{ cfg.log_stream_name_suffix }}"
                }
                {%- if not loop.last %}, {% endif %}
                {%- endfor %}
               ]
           }
        }
    }
}
